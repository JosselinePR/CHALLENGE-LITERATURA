import java.util.ArrayList;
import java.util.Scanner;

public class BuscadorLiteratura {

    public static void main(String[] args) {
        ArrayList<Libro> biblioteca = new ArrayList<>();
        Scanner sc = new Scanner(System.in);

        // Agregar algunos libros de ejemplo
        biblioteca.add(new Libro("Cien Años de Soledad", "Gabriel García Márquez", 1967));
        biblioteca.add(new Libro("Don Quijote de la Mancha", "Miguel de Cervantes", 1605));
        biblioteca.add(new Libro("Orgullo y Prejuicio", "Jane Austen", 1813));
        biblioteca.add(new Libro("El Principito", "Antoine de Saint-Exupéry", 1943));

        System.out.println("Bienvenido al Buscador de Literatura");
        System.out.print("Ingresa palabra clave (título o autor): ");
        String busqueda = sc.nextLine().toLowerCase();

        System.out.println("\nResultados encontrados:");
        boolean encontrado = false;
        for (Libro libro : biblioteca) {
            if (libro.getTitulo().toLowerCase().contains(busqueda) ||
                libro.getAutor().toLowerCase().contains(busqueda)) {
                System.out.println(libro);
                encontrado = true;
            }
        }

        if (!encontrado) {
            System.out.println("No se encontraron libros que coincidan con la búsqueda.");
        }

        sc.close();
    }
}
